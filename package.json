{
  "name": "@andreaspizsa/eslint-config-xo",
  "version": "0.1.2",
  "main": "index.js",
  "scripts": {
    "release": "standard-version",
    "test": "xo test/*.js"
  },
  "keywords": [
    "xo",
    "config",
    "postinstaller"
  ],
  "author": "Andreas Pizsa <hopster@gmail.com> (https://github.com/AndreasPizsa)",
  "license": "MIT",
  "description": "a lightly customized `xo` config",
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "ava": "1.0.0-rc.2",
    "husky": "^1.2.0",
    "nyc": "^13.1.0",
    "standard-version": "^4.4.0",
    "xo": "^0.23.0"
  },
  "xo": {
    "extends": [
      "xo-space"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "func-names": "off",
      "key-spacing": [
        "error",
        {
          "multiLine": {
            "mode": "minimum",
            "beforeColon": false,
            "afterColon": true
          },
          "align": {
            "beforeColon": false,
            "afterColon": true,
            "on": "colon"
          }
        }
      ],
      "no-negated-condition": "warn",
      "operator-linebreak": [
        "error",
        "before",
        {
          "overrides": {
            "x?": "ignore",
            "x:": "ignore"
          }
        }
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "postinstaller": {
    "scripts.pretest": "xo",
    "xo.extends[]": "@andreaspizsa/eslint-config-xo",
    "xo.semicolon": false,
    "xo.space": true
  },
  "dependencies": {
    "eslint-config-xo-space": "^0.20.0"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm test"
    }
  }
}
